@using AngleSharp.Css.Dom
@using Xunit;
@inherits TestContext

@code {

    public FluentSpacerTests()
    {
        JSInterop.Mode = JSRuntimeMode.Loose;
        Services.AddFluentUIComponents();
    }

    [Fact]
    public void FluentSpacer_Default()
    {
        // Arrange && Act
        var cut = Render(@<FluentSpacer />);

        // Assert
        var flexGrow = cut.Find("div").GetStyle()["flex-grow"];
        Assert.Equal("1", flexGrow);
    }

    [Fact]
    public void FluentSpacer_Size()
    {
        // Arrange && Act
        var cut = Render(@<FluentSpacer Size="50px" />);

        // Assert
        var width = cut.Find("div").GetStyle()["width"];
        Assert.Equal("50px", width);
    }

    [Fact]
    public void FluentSpacer_Vertical_Height()
    {
        // Arrange && Act
        var cut = Render(@<FluentSpacer Size="50px" Orientation="Orientation.Vertical"/>);

        // Assert
        var width = cut.Find("div").GetStyle()["height"];
        Assert.Equal("50px", width);
    }
}
