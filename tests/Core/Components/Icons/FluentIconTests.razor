    [Fact]
    public void FluentIcon_OnClick()
    {
        var isClicked = false;

        // Arrange
        var icon = new Icons.Samples.Info();
        var cut = Render(@<FluentIcon Value="@icon" OnClick="@(e => isClicked = true)" />);

        // Act
        cut.Find("svg").Click();

        // Assert
        Assert.True(isClicked);
    }

    [Fact]
    public void FluentIcon_OnClick_NoDelegate()
    {
        var isClicked = false;

        // Arrange
        var icon = new Icons.Samples.Info();
        var cut = Render(@<FluentIcon Value="@icon" />);

        // Act
        cut.Find("svg").Click();
        cut.Find("svg").KeyDown(Key.Enter);

        // Assert
        Assert.False(isClicked);
    }

    [Theory]
    [InlineData("Enter", true)]
    [InlineData("NumpadEnter", true)]
    [InlineData("Space", false)]
    public void FluentIcon_OnKeyDown(string key, bool isExpectedClicked)
    {
        var isClicked = false;

        // Arrange
        var icon = new Icons.Samples.Info();
        var cut = Render(@<FluentIcon Value="@icon" OnClick="@(e => isClicked = true)" />);

        // Act
        cut.Find("svg").KeyDown(new KeyboardEventArgs() { Key = key });

        // Assert
        Assert.Equal(isExpectedClicked, isClicked);
    }

