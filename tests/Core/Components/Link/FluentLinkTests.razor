	[Fact]
	public void FluentLink_OnClick()
	{
		bool clicked = false;

		// Arrange
		var cut = Render(@<FluentLink OnClick="@(e => { clicked = true; })">fluent link</FluentLink>);

		// Act
		cut.Find("fluent-link").Click();

		// Assert
		Assert.True(clicked);
	}
}
