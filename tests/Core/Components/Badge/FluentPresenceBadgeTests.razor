    [Fact]
    public void FluentPresenceBadge_Attached_DefaultPositioning()
    {
        // Arrange && Act
        var cut = Render(@<FluentPresenceBadge>
                            <div id="target">Target</div>
                          </FluentPresenceBadge>);

        // Assert
        var badge = cut.Find("fluent-badge");
        Assert.Equal("below-end", badge.GetAttribute("positioning"));
    }

    [Fact]
    public void FluentPresenceBadge_Slot()
    {
        // Arrange && Act
        var cut = Render(@<FluentPresenceBadge slot="@FluentSlot.Badge" />);

        // Assert
        var badge = cut.Find("fluent-badge");
        Assert.Equal("badge", badge.GetAttribute("slot"));
        Assert.Equal("extra-small", badge.GetAttribute("size"));
    }

	[Fact]
	public void FluentPresenceBadge_Slot_NotEqualToBadge()
	{
		// Arrange && Act
		var cut = Render(@<FluentPresenceBadge slot="@FluentSlot.Start" />);

		// Assert
		var badge = cut.Find("fluent-badge");
		Assert.Equal("start", badge.GetAttribute("slot"));
		Assert.Null(badge.GetAttribute("size"));
	}

