@using Xunit;
@inherits TestContext
@code
{
    [Fact]
    public void FluentSplitter_DefaultHorizontal()
    {
        // Arrange && Act
            var cut = Render(@<FluentSplitter Id="split-test" Orientation="Orientation.Horizontal">
            <Panel1>render me</Panel1>
            <Panel2>render me</Panel2>
            </FluentSplitter>);

        // Assert
        cut.Verify();
    }

