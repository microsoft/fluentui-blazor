        // Act
        var messageBar = await messageService.ShowMessageBarAsync(options =>
        {
            options.Title = "This is a message";
            options.Intent = MessageIntent.Warning;
            options.Section = "TOP_SECTION";
            options.AllowDismiss = false;
        });

        // Assert
        cut.Verify();
    }
}
