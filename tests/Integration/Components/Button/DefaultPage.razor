@page "/button/default"
@page "/"
@rendermode RenderMode.InteractiveServer

<div>
    Current count: @Value
</div>
<button @onclick="@Increment">Increment</button>

@code
{
    private int Value = 0;

    protected override void OnInitialized()
    {
        base.OnInitialized();
    }

    private void Increment()
    {
        Value++;
    }
}
