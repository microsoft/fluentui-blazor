@inject IMessageBarService MessageService

Click on this button to display a message (max 5) in the top
or in the Notification Center (top/right icon).

<br />
<FluentButton OnClick="@AddInTopBar" Appearance="Appearance.Accent">Add on Top</FluentButton>
<FluentButton OnClick="@AddInNotificationCenter" Appearance="Appearance.Accent">Add in Notification Center</FluentButton>
<FluentButton Appearance="Appearance.Hypertext" OnClick="@((e) => MessageService.Clear())">Clear all alerts</FluentButton>

@code
{
    int counter = 0;
    void AddInTopBar()
    {
        var type = Enum.GetValues<MessageBarIntent>()[counter % 4];
        var message = $"Simple message #{counter++}";
        var category = App.MESSAGE_TOP;
        MessageService.Add(message, category, type);
    }

    void AddInNotificationCenter()
    {
        MessageService.Add(option =>
        {
            option.Intent = Enum.GetValues<MessageBarIntent>()[counter % 4];
            option.Title = $"Simple message #{counter++}";
            option.Body = MessageBarSamples.OneRandomMessage;
            option.PrimaryAction.Text = "more info";
            option.PrimaryAction.Href = "http://papertoilet.com";
            option.Timestamp = DateTime.Now;
            option.Section = App.MESSAGE_NOTIFICATION_CENTER;
        });
    }
}