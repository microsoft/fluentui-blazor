@inject IMessageService MessageService

Click on this button to display an Alert (max 5).
<br />
<FluentButton OnClick="@DisplayAlert" Appearance="Appearance.Accent">Display</FluentButton>
<FluentButton Appearance="Appearance.Hypertext" OnClick="@((e) => MessageService.Clear())">Clear all alerts</FluentButton>

@code
{
    int counter = 0;
    void DisplayAlert()
    {
        counter++;

        MessageService.Add(options =>
        {
            options.Category = "ALERT_TOP"; // App.ALERT_TOP;

            options.Text = $"That's the message #{counter}.<br/> <b>You can't click these buttons really quickly.</b>";
            options.Type = Enum.GetValues<MessageType>()[counter % 4];

            options.Icon = new Icons.Regular.Size24.PersonCircle();            
            options.ShowDismiss = true;

            options.ClearAfterNavigation = true;
            options.OnClose = (e) => { DemoLogger.WriteLine($"Message {e.Type} dismissed"); return Task.CompletedTask; };

            options.Action.Text = "Learn more";
            options.Action.Href = "https://bing.com";
            options.Action.OnClick = (e) => { DemoLogger.WriteLine($"Message 'learn more' clicked"); return Task.CompletedTask; };
        });
    }
}