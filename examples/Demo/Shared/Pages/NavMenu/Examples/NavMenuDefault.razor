@namespace FluentUI.Demo.Shared

@inject ILogger<NavMenuDefault> logger;

<h2>Navigation Examples</h2>

<FluentStack Orientation="Orientation.Horizontal" >
    <!-- Menu with sub-items and icons -->
    <FluentNavMenu Collapsible="false">
        <FluentNavMenuLink Text="Item 1" Icon="@(new Icons.Regular.Size24.Home())" Href="/NavMenu#1" />
        <FluentNavMenuLink Text="Item 2" Href="/NavMenu#2" />
        <FluentNavMenuGroup Text="Item 3" Href="/NavMenu#3">
            <FluentNavMenuLink Text="Item 3.1" Icon="@(new Icons.Regular.Size24.LeafOne())" Href="/NavMenu#3_1" />
            <FluentNavMenuLink Text="Item 3.2" Icon="@(new Icons.Regular.Size24.LeafTwo())" Href="/NavMenu#3_2" />
        </FluentNavMenuGroup>
        <FluentNavMenuGroup Text="Item 4" @onclick="OnClick" Href="/NavMenu#4">
            <FluentNavMenuLink Text="Item 4.1" @onclick="OnClick" Href="/NavMenu#4_1" />
            <FluentNavMenuLink Text="Item 4.2" @onclick="OnClick" Icon="@(new Icons.Regular.Size24.LeafOne())" Href="/NavMenu#4_2" />
        </FluentNavMenuGroup>
        <FluentNavMenuGroup Text="Item 5" @onclick="OnClick" Href="/NavMenu#5">
            <FluentNavMenuLink Text="Item 5.1" @onclick="OnClick" Icon="@(new Icons.Regular.Size24.LeafTwo())" Href="/NavMenu#5_1" />
            <FluentNavMenuGroup @onclick="OnClick" Text="Item 5.2" Href="/NavMenu#5_2">
                <FluentNavMenuLink Text="Item 5.2.1" @onclick="OnClick" Href="/NavMenu#5_2_1" />
                <FluentNavMenuLink Text="Item 5.2.2" @onclick="OnClick" Href="/NavMenu#5_2_2" />
            </FluentNavMenuGroup>
            <FluentNavMenuGroup @onclick="OnClick" Text="Item 5.3" Href="/NavMenu#5_3">
                <FluentNavMenuLink Text="Item 5.3.1" @onclick="OnClick" Icon="@(new Icons.Regular.Size24.LeafOne())" Href="/NavMenu#5_3_1" />
                <FluentNavMenuLink Text="Item 5.3.2" @onclick="OnClick" Href="/NavMenu#5_3_2" />
            </FluentNavMenuGroup>
        </FluentNavMenuGroup>
        <FluentNavMenuGroup @onclick="OnClick" Text="Items with Href">
            <FluentNavMenuLink Text="Go to Bing" @onclick="OnClick" Icon="@(new Icons.Regular.Size24.LeafOne())" Href="https://bing.com" />
            <FluentNavMenuLink Text="Go to home page" @onclick="OnClick" Icon="@(new Icons.Regular.Size24.Home())" Href="/" />
        </FluentNavMenuGroup>
        <FluentNavMenuLink Text="Last item" @onclick="OnClick" Icon="@(new Icons.Regular.Size24.LeafThree())" Disabled="true" />
    </FluentNavMenu>

    <!-- Menu with icons -->
    <FluentNavMenu>
        <FluentNavMenuLink Text="Item 1" @onclick="OnClick" Icon="@(new Icons.Regular.Size24.Home())" Href="/NavMenu#1" />
        <FluentNavMenuLink Text="Item 2" @onclick="OnClick" Href="/NavMenu#2" />
        <FluentNavMenuLink Text="Item 3" @onclick="OnClick" Icon="@(new Icons.Regular.Size24.LeafOne())" Href="/NavMenu#3" />
        <FluentNavMenuLink Text="Item 4" @onclick="OnClick" Href="/NavMenu#4" />
    </FluentNavMenu>

    <!-- Menu simple -->
    <FluentNavMenu>
        <FluentNavMenuLink Text="Item 1" @onclick="OnClick" Href="/NavMenu#1" />
        <FluentNavMenuLink Text="Item 2" @onclick="OnClick" Href="/NavMenu#2" />
        <FluentNavMenuLink Text="Item 3" @onclick="OnClick" Href="/NavMenu#3" />
        <FluentNavMenuLink Text="Item 4" @onclick="OnClick" Href="/NavMenu#4" />
    </FluentNavMenu>

</FluentStack>
@code
{

    void OnClick(MouseEventArgs e)
    {
        logger.LogInformation("Item Clicked");
    }

    protected override void OnAfterRender(bool firstRender) {
        if (firstRender) 
        {
            
        }
        base.OnAfterRender(firstRender);
    }
}


