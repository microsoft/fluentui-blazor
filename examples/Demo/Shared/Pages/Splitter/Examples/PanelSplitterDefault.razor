@{ #pragma warning disable FluentPanelSplitter }

<FluentPanelSplitter OnResize="@OnResizeHandler" Height="150px" Style="border: 1px dashed var(--accent-fill-rest);">
    <FluentPanelSplitterPane Size="20%" Min="50px" Max="70%">
        Left Menu
    </FluentPanelSplitterPane>
    <FluentPanelSplitterPane Size="50%">
        <FluentPanelSplitter OnResize="@OnResizeHandler" Orientation="Orientation.Vertical">
            <FluentPanelSplitterPane Collapsible="true">
                Main Content
            </FluentPanelSplitterPane>
            <FluentPanelSplitterPane Collapsible="true">
                Console log
            </FluentPanelSplitterPane>
        </FluentPanelSplitter>
    </FluentPanelSplitterPane>
    <FluentPanelSplitterPane Size="30%">
        Properties
    </FluentPanelSplitterPane>
</FluentPanelSplitter>

@code
{
    void OnResizeHandler(FluentPanelSplitterResizeEventArgs e)
    {
        DemoLogger.WriteLine($"Pane {e.PaneIndex} Resize (New size {e.NewSize})");
    }
}