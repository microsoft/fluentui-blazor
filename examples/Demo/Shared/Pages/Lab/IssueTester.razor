@page "/IssueTester"
@using System.ComponentModel.DataAnnotations

<EditForm Model="@Data" OnValidSubmit="ValidHandlerAsync">
    <DataAnnotationsValidator />
     <FluentTextField Label="Last name:"
                      Placeholder="Enter your last name"
                      @bind-Value="@Data.LastName" Immediate="true" />
     <FluentValidationMessage For="@(() => Data.LastName)" />
</EditForm>

@code {
    public class RegisterUser
    {
        [Required(ErrorMessage = "Not empty!")]
        [MinLength(20, ErrorMessage = "Too short!")]
        public string? LastName { get; set; }
    }

    private RegisterUser Data { get; set; } = new RegisterUser();

    private async Task ValidHandlerAsync()
    {
        await Task.Delay(1000);
    }


}