@inherits LayoutComponentBase

<div class="container">
    <div class="header">
        <FluentStack Wrap="true" HorizontalGap="12px" Margin="@Margin.Vertical2" VerticalAlignment="VerticalAlignment.Center">
            <SectionOutlet SectionName="SearchBar" />
        </FluentStack>
    </div>

    <div class="body">
        <SectionOutlet SectionName="SearchResult" />
        @Body
    </div>

    <div class="footer">
        <SectionOutlet SectionName="SearchFooter" />
    </div>
</div>

@* Add all FluentUI Blazor Providers *@
<FluentProviders />

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
