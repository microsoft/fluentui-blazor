@using Microsoft.FluentUI.AspNetCore.Components

<div>
    <FluentCard Shadow="CardShadow.Small" Class="card" OnClick="@CopyToClipboardAsync">
        <div class="image" @ref="ImageElement">
            @if (Icon is not null)
            {
                <FluentIcon Value="@IconsExtensions.GetInstance(Icon)"
                            Color="@IconColor"
                            Title="@Icon.Name" />
            }
            <div class="clipboard-icon">
                <svg style="width: 16px; fill: var(--colorNeutralForeground1);" focusable="false" viewBox="0 0 16 16" aria-hidden="true">
                    <title>Clipboard</title>
                    <path d="M5.09 2c.2-.58.76-1 1.41-1h3c.65 0 1.2.42 1.41 1h.59c.83 0 1.5.67 1.5 1.5v10c0 .83-.67 1.5-1.5 1.5h-7A1.5 1.5 0 0 1 3 13.5v-10C3 2.67 3.67 2 4.5 2h.59ZM6.5 2a.5.5 0 0 0 0 1h3a.5.5 0 0 0 0-1h-3ZM5.09 3H4.5a.5.5 0 0 0-.5.5v10c0 .28.22.5.5.5h7a.5.5 0 0 0 .5-.5v-10a.5.5 0 0 0-.5-.5h-.59c-.2.58-.76 1-1.41 1h-3a1.5 1.5 0 0 1-1.41-1Z"></path>
                </svg>
            </div>
        </div>
        <FluentText Class="name" title="@FullName">
            @Icon?.Name
        </FluentText>
    </FluentCard>
</div>
