@inject NavigationManager Navigation
@inject FluentUI.Demo.DocViewer.Services.DocViewerService DocViewerService

<FluentNav UseLinks="true"
		   UseSingleExpanded="false"
		   Density="@NavDrawerDensity.Small">

	@foreach (var category in NavItems)
	{
		<FluentNavSectionHeader Title="@category.Title" />

		@foreach (var sitepage in category.Items)
		{

			@if (!sitepage.Items.Any())
			{
				<FluentNavItem Href="@sitepage.Route" Icon="@(new Icons.Regular.Size20.Home())">@sitepage.Title</FluentNavItem>
			}
			else
			{
				<FluentNavCategory Title="@sitepage.Title">
					<FluentNavSubItem Href="@sitepage.Route">Default</FluentNavSubItem>
					@foreach (var subPage in sitepage.Items)
					{
						<FluentNavSubItem Href="@sitepage.Route">@(subPage.Title)</FluentNavSubItem>
					}
				</FluentNavCategory>
			}
		}
	}
</FluentNav>
