@inject NavigationManager Navigation
@inject FluentUI.Demo.DocViewer.Services.DocViewerService DocViewerService

<div>
    <FluentTreeView>
        @* TODO: Need to manage multiple levels (not only 2) *@
        @foreach (var category in NavItems)
        {
            <FluentTreeItem Expanded="true"
                            Text="@category.Title"
                            Height="40px"
                            Style="font-weight: bold;">
                @foreach (var page in category.Items)
                {
                    <FluentTreeItem Text="@(page.Title)"
                                    SelectedChanged="@(e => e ? ItemClickAsync(page) : Task.CompletedTask)"
                                    Height="40px"
                                    Style="font-weight: normal;">
                        @foreach (var subPage in page.Items)
                        {
                            <FluentTreeItem Text="@(subPage.Title)"
                                            SelectedChanged="@(e => e ? ItemClickAsync(subPage) : Task.CompletedTask)"
                                            Height="40px"
                                            Style="font-weight: normal;" />
                        }
                    </FluentTreeItem>
                }
            </FluentTreeItem>
        }
    </FluentTreeView>
</div>
