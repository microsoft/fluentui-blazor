<FluentCard Width="300px">
    <FluentStack VerticalAlignment="VerticalAlignment.Center">
        <FluentImage Source="@PowerPointLogo" />
        <FluentStack Orientation="Orientation.Vertical" Margin="@Margin.Horizontal2">
            <FluentText Weight="TextWeight.Semibold">
                Team Offsite 2025
            </FluentText>
            <FluentText Size="TextSize.Size200" Color="@Color.Custom" CustomColor="@SystemColors.Neutral.Foreground3">
                OneDrive > Presentations
            </FluentText>
        </FluentStack>
        <FluentSpacer />
        <FluentButton Appearance="ButtonAppearance.Subtle"
                      IconOnly="true"
                      IconStart="@(new Icons.Regular.Size20.LineHorizontal1Dot())"
                      OnClick="@(e => Console.WriteLine("Button clicked"))" />
    </FluentStack>
</FluentCard>

@code
{
    const string PowerPointLogo = "data:image/png;base64,";
}
