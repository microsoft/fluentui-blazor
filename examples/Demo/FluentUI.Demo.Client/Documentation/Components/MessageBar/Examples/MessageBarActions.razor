<FluentSelect Label="Layout"
              Items="@(Enum.GetValues<MessageBarLayout>())"
              @bind-Value="@Layout" />

<FluentMessageBar Layout="@Layout" Animation="MessageBarAnimation.FadeIn">
    <ChildContent>
        Message providing information to the user with actionable insights.
        <FluentLink Href="https://blazor.net" Target="LinkTarget.Blank">Learn more</FluentLink>
    </ChildContent>
    <ActionsTemplate>
        <FluentButton Size="ButtonSize.Small">Action</FluentButton>
        <FluentButton Size="ButtonSize.Small">Action</FluentButton>
    </ActionsTemplate>
</FluentMessageBar>

