<FluentCard Appearance="@CardAppearance.Outline" Margin="@Margin.Vertical4">

    <!-- Content -->
    <FluentText>
        Lorem Ipsum rhoncus turpis turpis sed maecenas Odio turpis Lorem Euismod ipsum felis ridiculus
    </FluentText>

    <!-- Overlay with the default Spinner -->
