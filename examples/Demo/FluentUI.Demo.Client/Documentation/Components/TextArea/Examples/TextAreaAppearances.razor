<FluentStack Orientation="Orientation.Vertical" VerticalGap="20px">
    <FluentTextArea Appearance="@TextAreaAppearance.Outline" Label="Outline" Placeholder="Outline" @bind-Value="@Value" />
    <FluentTextArea Appearance="@TextAreaAppearance.FilledLighter" Label="FilledLighter" Placeholder="FilledLighter" @bind-Value="@Value" />
    <FluentTextArea Appearance="@TextAreaAppearance.FilledDarker" Label="FilledDarker" Placeholder="FilledDarker" @bind-Value="@Value" />
    <FluentTextArea Appearance="@TextAreaAppearance.FilledLighter" Label="FilledLighter with display shadow" Placeholder="FilledLighter with Display-Shadow" DisplayShadow="true" @bind-Value="@Value" />
</FluentStack>

<FluentStack Orientation="Orientation.Vertical" VerticalGap="20px">
    <FluentTextArea Size="@TextAreaSize.Small" Label="Small" Placeholder="Small" @bind-Value="@Value" />
    <FluentTextArea Size="@TextAreaSize.Medium" Label="Medium (default)" Placeholder="Medium (default)" @bind-Value="@Value" />
    <FluentTextArea Size="@TextAreaSize.Large" Label="Large" Placeholder="Large" @bind-Value="@Value" />
</FluentStack>

<FluentStack Orientation="Orientation.Horizontal" VerticalGap="20px">
    <FluentTextArea Block="true" Placeholder="Block" @bind-Value="@Value" />
</FluentStack>


<FluentLabel>Value = @Value</FluentLabel>

