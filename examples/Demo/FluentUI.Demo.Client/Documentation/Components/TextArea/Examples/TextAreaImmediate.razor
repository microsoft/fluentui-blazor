    <FluentTextInput Appearance="@TextInputAppearance.Outline"
                     Placeholder="Updated after 400ms"
                     @bind-Value="@value"
                     @bind-Value:after="@(() => Console.WriteLine($"TextInput updated to '{value}'.") )"
                     Immediate="true"
                     ImmediateDelay="400" />

    <FluentLabel>Value = @value</FluentLabel>
</FluentStack>


