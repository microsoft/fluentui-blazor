<FluentStack Orientation="Orientation.Vertical" VerticalGap="20px">
    <FluentTextArea Resize="@TextAreaResize.None" Label="Resize none" Placeholder="Resize none" @bind-Value="@Value" />
    <FluentTextArea Resize="@TextAreaResize.Vertical" Label="Resize vertical" Placeholder="Resize vertical" @bind-Value="@Value" />
    <FluentTextArea Resize="@TextAreaResize.Horizontal" Label="Resize horizontal" Placeholder="Resize horizontal" @bind-Value="@Value" />
    <FluentTextArea Resize="@TextAreaResize.Both" Label="Resize both" Placeholder="Resize both" @bind-Value="@Value" />
    <FluentTextArea AutoResize="true" Label="Auto Resize" Placeholder="Auto Resize" @bind-Value="@Value" />
</FluentStack>

<FluentLabel>Value = @Value</FluentLabel>

