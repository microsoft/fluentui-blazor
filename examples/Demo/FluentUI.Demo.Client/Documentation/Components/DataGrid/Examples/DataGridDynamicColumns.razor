@using static FluentUI.Demo.SampleData.People

<FluentStack HorizontalGap="20">
    Show:
    <FluentCheckbox @bind-Value="showName" Label="Name" />
    <FluentCheckbox @bind-Value="showBirthDate" Label="Birth date" />
</FluentStack>

<FluentDataGrid Items="@Persons.Take(10).AsQueryable()" Style="width: 500px;">
    <PropertyColumn Title="ID" Property="@(c => c.Id)" Sortable="true" Width="100px" />
    @if (showName)
    {
        <TemplateColumn Title="Name" Width="200px">
            <strong>@context.LastName</strong>, @context.FirstName
        </TemplateColumn>
    }
    @if (showBirthDate)
    {
        <PropertyColumn Title="Birth date"
                        Property="@(c => c.BirthDay)"
                        Format="yyyy-MM-dd"
                        Sortable="true"
                        Width="200px" />
    }
</FluentDataGrid>


@code {
    bool showName = true;
    bool showBirthDate = false;

}
