<FluentButton Loading="@loading"
              OnClick="@StartLoadingAsync">
    Refresh
</FluentButton>
<FluentButton IconStart="@(new Icons.Regular.Size16.ArrowClockwise())"
              Appearance="ButtonAppearance.Primary"
              Loading="@loading"
              OnClick="@StartLoadingAsync">
    Refresh
</FluentButton>

@code {

    bool loading = false;

    async Task StartLoadingAsync()
    {
        loading = true;
        await this.TimerWaitAsync(2000, () => loading = false);
    }
}
