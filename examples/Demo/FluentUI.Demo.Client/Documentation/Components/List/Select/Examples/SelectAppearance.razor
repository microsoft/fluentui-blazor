<b>Appearance</b>
<FluentStack HorizontalGap="12px" Wrap="true">
    <FluentSelect Label="Outline"
                  Appearance="@ListAppearance.Outline"
                  Items="@Colors"
                  @bind-Value="@Value" />

    <FluentSelect Label="FilledLighter"
                  Appearance="@ListAppearance.FilledLighter"
                  Items="@Colors"
                  @bind-Value="@Value" />

    <FluentSelect Label="FilledDarker"
                  Appearance="@ListAppearance.FilledDarker"
                  Items="@Colors"
                  @bind-Value="@Value" />

    <FluentSelect Label="Transparent"
                  Appearance="@ListAppearance.Transparent"
                  Items="@Colors"
                  @bind-Value="@Value" />

</FluentStack>

<b>Size</b>
<FluentStack HorizontalGap="12px" Wrap="true">
    <FluentSelect Label="Small"
                  Size="@ListSize.Small"
                  Items="@Colors"
                  @bind-Value="@Value" />

    <FluentSelect Label="Medium (default)"
                  Size="@ListSize.Medium"
                  Items="@Colors"
                  @bind-Value="@Value" />

    <FluentSelect Label="Large"
                  Size="@ListSize.Large"
                  Items="@Colors"
                  @bind-Value="@Value" />
</FluentStack>

@code {
    static string[] Colors = ["Red", "Green", "Blue"];
    string Value = "Red";
}
