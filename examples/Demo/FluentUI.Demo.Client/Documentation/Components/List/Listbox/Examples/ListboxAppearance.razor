<FluentStack HorizontalGap="12px" Wrap="true">
    <FluentListbox Label="Outline"
                   Appearance="@ListAppearance.Outline"
                   Items="@Colors"
                   @bind-Value="@Value" />

    <FluentListbox Label="FilledLighter"
                   Appearance="@ListAppearance.FilledLighter"
                   Items="@Colors"
                   @bind-Value="@Value" />

    <FluentListbox Label="FilledDarker"
                   Appearance="@ListAppearance.FilledDarker"
                   Items="@Colors"
                   @bind-Value="@Value" />

    <FluentListbox Label="Transparent"
                   Appearance="@ListAppearance.Transparent"
                   Items="@Colors"
                   @bind-Value="@Value" />

</FluentStack>

@code {
    static string[] Colors = ["Red", "Green", "Blue"];
    string Value = "Green";
}
