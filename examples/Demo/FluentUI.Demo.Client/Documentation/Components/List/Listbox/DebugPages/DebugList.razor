@page "/Lists/Listbox/debug"

<div>
    Colors: <code>@(string.Join(", ", Colors))</code>
</div>
<div>
    Selected items: <code>@(string.Join(", ", SelectedItems))</code>
</div>

<FluentListbox Label="Color"
               Items="@Colors"
               TOption="string"
               TValue="string"
               @bind-SelectedItems="@SelectedItems"
               Multiple="true" />

<FluentButton OnClick="@(e => Colors = new[] { "Yellow", "Purple", "Cyan" })">
    Yellow, Purple, Cyan
</FluentButton>

<FluentButton OnClick="@(e => Colors = new[] { "Red", "Green", "Blue" })">
    Red, Green, Blue
</FluentButton>

<FluentButton OnClick="@(e => SelectedItems = new[] { Colors[0], Colors[2] })">
    Check 1 and 3
</FluentButton>

@code {
    string[] Colors = ["Red", "Green", "Blue"];
    IEnumerable<string> SelectedItems = new[] { "Green" };
}
