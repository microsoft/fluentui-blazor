<FluentStack Orientation="@Orientation.Horizontal" HorizontalGap="32px">

    <FluentField Message="Processing">
        <FluentStack HorizontalAlignment="HorizontalAlignment.Center">
            <FluentSpinner />
        </FluentStack>
    </FluentField>

    <FluentField Message="Loading">
        <FluentStack HorizontalAlignment="HorizontalAlignment.Center">
            <FluentSpinner Size="@SpinnerSize.Huge" />
        </FluentStack>
    </FluentField>

</FluentStack>
