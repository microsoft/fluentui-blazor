<FluentStack Orientation="@Orientation.Vertical" VerticalGap="24px">
    <FluentField Message="Success ProgressBar" MessageState="@MessageState.Success">
        <FluentProgressBar State="@ProgressState.Success" Value="30" Thickness="@ProgressThickness.Large" Width="300px" />
    </FluentField>
    <FluentField Message="Warning ProgressBar" MessageState="@MessageState.Warning">
        <FluentProgressBar State="@ProgressState.Warning" Value="60" Thickness="@ProgressThickness.Large" Width="300px" />
    </FluentField>
    <FluentField Message="Error ProgressBar" MessageState="@MessageState.Error">
        <FluentProgressBar State="@ProgressState.Error" Value="90" Thickness="@ProgressThickness.Large" Width="300px" />
    </FluentField>
</FluentStack>
