<div style="height: 400px; border: var(--strokeWidthThin) solid var(--colorNeutralStroke1);">

    <FluentLayout>

        <FluentLayoutItem Area="@LayoutArea.Header" Style="font-size: larger; font-weight: bold; display: flex; ">
            <FluentLayoutHamburger />
            Microsoft Demo
        </FluentLayoutItem>

        <FluentLayoutItem Area="@LayoutArea.Menu" Width="150px" Style="padding: 8px; border-right: var(--strokeWidthThin) solid var(--colorNeutralStroke1);">
            <div style="font-weight: bold;">Navigation</div>
            @SampleData.Text.Titles.Take(10).ToMarkupList("li")
        </FluentLayoutItem>

        <FluentLayoutItem Area="@LayoutArea.Content">
            <div style="margin: 12px">
                <div style="font-weight: bold;">Content</div>
                @SampleData.Text.LoremIpsum.Take(10).ToMarkupList("p")
            </div>
        </FluentLayoutItem>

        <FluentLayoutItem Area="@LayoutArea.Aside" Width="120px" Style="padding: 8px; background-color: var(--colorBrandBackground2);" Sticky="true">
            <div style="font-weight: bold;">News</div>
            @SampleData.Text.LoremIpsum.ElementAt(2)[..200]
        </FluentLayoutItem>

        <FluentLayoutItem Area="@LayoutArea.Footer">
            &copy; Microsoft @DateTime.Now.Year
        </FluentLayoutItem>

    </FluentLayout>
</div>
