<FluentSlider Min="10"
              Max="40"
              @bind-Value="@Celsius"
              @bind-Value:after="@ValueChangedHandler"
              Step="0.5"
              Style="width: 300px"
              Label="@($"C° : {Celsius}")" />

<p>Convert to F° : @Fahrenheit</p>

@code {
    double Celsius = 19;
    double Fahrenheit;

    void ValueChangedHandler()
    {
        Fahrenheit = Celsius * 9 / 5 + 32;
    }
}
