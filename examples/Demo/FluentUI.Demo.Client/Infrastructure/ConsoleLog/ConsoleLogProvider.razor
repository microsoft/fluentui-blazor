<div class="fluent-console-log">
    <fluent-button icon-only appearance="transparent" class="clear-button" @onclick="@ClearConsole">
        <svg style="width: 20px; fill: white;" focusable="false" viewBox="0 0 20 20" aria-hidden="true">
            <title>Clear</title>
            <path d="M7.15 7.15c.2-.2.5-.2.7 0L10 9.29l2.15-2.14a.5.5 0 0 1 .7.7L10.71 10l2.14 2.15a.5.5 0 0 1-.7.7L10 10.71l-2.15 2.14a.5.5 0 0 1-.7-.7L9.29 10 7.15 7.85a.5.5 0 0 1 0-.7ZM3 6a3 3 0 0 1 3-3h8a3 3 0 0 1 3 3v8a3 3 0 0 1-3 3H6a3 3 0 0 1-3-3V6Zm3-2a2 2 0 0 0-2 2v8c0 1.1.9 2 2 2h8a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2H6Z" />
        </svg>
    </fluent-button>
    <ul>
        @foreach (var item in ConsoleService.Traces)
        {
            <li>
                <code>@item.Recorded.ToString("HH:mm:ss")</code>
                <span>@item.Message</span>
            </li>
        }
    </ul>
</div>
