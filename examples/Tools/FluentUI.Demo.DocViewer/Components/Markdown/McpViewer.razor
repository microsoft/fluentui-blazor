@using FluentUI.Demo.DocViewer.Components.Markdown.Details
@using FluentUI.Demo.DocViewer.Models.Mcp
<div class="mcp-viewer">
    @if (!IsDocumentationLoaded)
    {
        <div class="component-not-found">&#9888; MCP documentation not loaded. Ensure the mcp-documentation.json file is available.</div>
    }
    else if (!IsValidMcpType)
    {
        <div class="component-not-found">&#9888; Unknown MCP type '@McpType'. Use 'tools', 'resources', or 'prompts'.</div>
    }
    else
    {
        @switch (McpType)
        {
            case McpType.Tools:
                <McpToolsDetail Tools="@Tools" Filter="@McpFilter" />
                break;

            case McpType.Resources:
                <McpResourcesDetail Resources="@Resources" Filter="@McpFilter" />
                break;

            case McpType.Prompts:
                <McpPromptsDetail Prompts="@Prompts" Filter="@McpFilter" />
                break;
        }
    }
</div>
