<Project Sdk="Microsoft.NET.Sdk.Razor">

	<PropertyGroup>
		<TargetFrameworks>net8.0</TargetFrameworks>
		<LangVersion>latest</LangVersion>
		<PackageId>Microsoft.FluentUI.AspNetCore.Components.Icons</PackageId>
    <BaseAssemblyName>Microsoft.FluentUI.AspNetCore.Components.Icons</BaseAssemblyName>
    <AssemblyName Condition="'$(ICONS_BUILD)' == ''">$(BaseAssemblyName)</AssemblyName>
    <AssemblyName Condition="'$(ICONS_BUILD)' != ''">$(BaseAssemblyName).$(ICONS_BUILD)</AssemblyName>
    <RootNamespace>Microsoft.FluentUI.AspNetCore.Components.Icons</RootNamespace>
		<Nullable>enable</Nullable>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<ImplicitUsings>enable</ImplicitUsings>
		<IsTrimmable>true</IsTrimmable>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <SignAssembly>false</SignAssembly>

		<Summary>A Blazor wrapper library for the official Microsoft Fluent UI System Icons library.</Summary>
		<PackageTags>Icons, Fluent UI, Blazor, .NET8</PackageTags>
		<Title>A Blazor wrapper library for the official Microsoft Fluent UI System Icons library.</Title>
		<Description>A Blazor wrapper library for the official Microsoft Fluent UI System Icons library.</Description>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageIcon>icon.png</PackageIcon>

    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <DebugType>embedded</DebugType>

    <DefineConstants>$(DefineConstants);ICONS_BUILD=$(ICONS_BUILD)</DefineConstants>
		<PackageOutputPath>..\..\..\artifacts</PackageOutputPath>
	</PropertyGroup>

	<ItemGroup>
		<None Include="README.md" Pack="true" PackagePath="\" />
		<None Include="..\..\..\icon.png" Pack="true" PackagePath="\" />
	</ItemGroup>

	<ItemGroup>
	  <PackageReference Include="Microsoft.FluentUI.AspNetCore.Components" />
	  <PackageReference Include="Microsoft.VisualStudioEng.MicroBuild.Core">
	    <PrivateAssets>all</PrivateAssets>
	    <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
	  </PackageReference>
	</ItemGroup>

  <!-- Condition to generate multiple DLLs -->
  <PropertyGroup Condition="'$(ICONS_BUILD)' != ''">
    <EnableDefaultItems>false</EnableDefaultItems>
  </PropertyGroup>

  <ItemGroup Condition="'$(ICONS_BUILD)' != ''">
    <Compile Include="Icons\$(ICONS_BUILD)*.cs" />
  </ItemGroup>

</Project>
