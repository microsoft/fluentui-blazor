<Project Sdk="Microsoft.NET.Sdk.Razor">

	<PropertyGroup>
		<TargetFrameworks>net8.0</TargetFrameworks>
		<LangVersion>latest</LangVersion>
		<PackageId>Microsoft.FluentUI.AspNetCore.Components.Icons</PackageId>
		<AssemblyName>Microsoft.FluentUI.AspNetCore.Components.Icons</AssemblyName>
		<RootNamespace>Microsoft.FluentUI.AspNetCore.Components.Icons</RootNamespace>
		<Nullable>enable</Nullable>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<ImplicitUsings>enable</ImplicitUsings>
		<IsTrimmable>true</IsTrimmable>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>

		<Summary>A set of icons wrapping Microsoft’s official Fluent UI Icon library.</Summary>
		<PackageTags>Icons, Fluent UI, Blazor, .NET8</PackageTags>
		<Title>A set of icons wrapping Microsoft’s official Fluent UI Icon library.</Title>
		<Description>A set of icons wrapping Microsoft’s official Fluent UI Icon library.</Description>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageIcon>icon.png</PackageIcon>

    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <DebugType>embedded</DebugType>

		<PackageOutputPath>..\..\..\artifacts</PackageOutputPath>
	</PropertyGroup>

	<ItemGroup>
		<None Include="README.md" Pack="true" PackagePath="\" />
		<None Include="..\..\..\icon.png" Pack="true" PackagePath="\" />
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="Icons\" />
	</ItemGroup>

	<ItemGroup>
	  <PackageReference Include="Microsoft.FluentUI.AspNetCore.Components" />
	  <PackageReference Include="Microsoft.VisualStudioEng.MicroBuild.Core">
	    <PrivateAssets>all</PrivateAssets>
	    <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
	  </PackageReference>
	</ItemGroup>

  <ItemGroup>
    <FilesToSign Include="$(OutDir)\Microsoft.FluentUI.AspNetCore.Components.Icons.dll">
      <Authenticode>Microsoft400</Authenticode>
      <StrongName>StrongName</StrongName>
    </FilesToSign>
  </ItemGroup>

</Project>
