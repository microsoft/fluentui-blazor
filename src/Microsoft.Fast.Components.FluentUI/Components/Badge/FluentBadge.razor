@namespace Microsoft.Fast.Components.FluentUI
@inherits FluentComponentBase
<fluent-badge @ref=Element
              id = "@Id"
              class="@ClassValue"
              style="@StyleValue"
              appearance="@Appearance.ToAttributeValue()" 
              fill="@Fill"
              color="@Fill"
              circular="@Circular"
              @onclick="@OnClickHandlerAsync"
              @attributes="AdditionalAttributes">
        @ChildContent
        @if (OnDismissClick.HasDelegate)
        {
            <FluentSystemIcon Icon="CoreIcons.Regular.Size24.Dismiss" Width="12" OnClick="OnDismissClickHandlerAsync" />
        }
    
</fluent-badge>
