@namespace Microsoft.Fast.Components.FluentUI
@inherits FluentComponentBase
@typeparam TOption
<fluent-option @ref=Element
               class="@Class"
               style="@Style"
               id="@OptionId"
               disabled="@Disabled"
               value="@Value"
               selected="@(Selected ? "true" : null)"
               @onclick="@OnSelectHandler"
               @attributes="AdditionalAttributes">
    @ChildContent
</fluent-option>
