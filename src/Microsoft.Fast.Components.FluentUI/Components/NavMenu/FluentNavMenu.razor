@namespace Microsoft.Fast.Components.FluentUI

@inherits FluentComponentBase
<div>
    <CascadingValue Value="this" IsFixed="true">
        <CascadingValue Value="@Expanded" Name="NavMenuExpanded">
            <FluentTreeView Class="@ClassValue"
                            Style="@StyleValue"
                            OnSelectedChange="HandleSelectedChange">
                @if (Collapsible) {
                    <FluentButton Appearance="Appearance.Lightweight"
                              Class="navmenu-main-button"
                              @onclick="CollapsibleClickAsync"
                              title="@Title">
                        @if (NavigationIconContent is not null)
                        {
                            @NavigationIconContent
                        }
                        else
                        {
                            <FluentSystemIcon Icon="CoreIcons.Regular.Size24.Navigation" Width="20px" />
                        }
                    </FluentButton>
                }
                @ChildContent
            </FluentTreeView>
        </CascadingValue>
    </CascadingValue>
</div>