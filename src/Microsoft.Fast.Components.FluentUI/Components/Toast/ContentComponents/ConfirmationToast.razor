@using Microsoft.AspNetCore.Components.Rendering
@implements IToastContentComponent

@namespace Microsoft.Fast.Components.FluentUI

<FluentStack Orientation="Orientation.Horizontal" Width="100%" VerticalAlignment="VerticalAlignment.Center" HorizontalGap="8">
    @if (Settings.Icon is not null)
    {
        (Icon Value, Color Color) Icon = Settings.Icon.Value;

        <FluentSystemIcon Value="@Icon.Value" Style="min-width: 16px;" Width="16px"  Color="@Icon.Color" />
    }

    <div class="fluent-toast-title">@Title</div>
    <div class="fluent-toast-action">
        @if (EndContentType == ToastEndContentType.Dismiss)
        {
            <FluentSystemIcon Icon="CoreIcons.Regular.Size24.Dismiss"
                              Width="12px"
                              Title="Close"
                              Color="Color.FillInverse"
                              OnClick=@Close />
        }
        @if (EndContentType == ToastEndContentType.Action)
        {
            <FluentAnchor Href="@(String.IsNullOrEmpty(PrimaryAction?.Href) ? "#" : PrimaryAction?.Href)"
                          title="Toast action"
                          Style="font-size: 14px; font-weight:400;"
                          Appearance="Appearance.Hypertext"
                          @onclick="HandlePrimaryActionClick">
                @PrimaryAction?.Text
            </FluentAnchor>
        }
    </div>
</FluentStack>
