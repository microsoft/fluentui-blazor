@namespace Microsoft.Fast.Components.FluentUI
@implements IToastContentComponent<ProgressToastContent>


<div class="fluent-toast-body">
    @if (!string.IsNullOrWhiteSpace(ToastContent.Details))
    {
        <div class="fluent-toast-details">@ToastContent.Details</div>
    }

    <FluentProgress Class="fluent-toast-progressbar" Min="0" Max="100" @bind-Value="@ToastContent.Progress"></FluentProgress>
    <div class="fluent-toast-progressbar-percentage">@ToastContent.Progress%</div>
</div>