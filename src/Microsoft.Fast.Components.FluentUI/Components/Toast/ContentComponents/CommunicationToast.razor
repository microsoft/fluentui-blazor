@namespace Microsoft.Fast.Components.FluentUI
@implements IToastContentComponent<CommunicationToastData>

<div class="fluent-toast-body">
    @if (!string.IsNullOrWhiteSpace(Data.Subtitle))
    {
        <div class="fluent-toast-subtitle">@Data.Subtitle</div>
    }

    @if (!string.IsNullOrWhiteSpace(Data.Details))
    {
        <div class="fluent-toast-details">@Data.Details</div>
    }
</div>
