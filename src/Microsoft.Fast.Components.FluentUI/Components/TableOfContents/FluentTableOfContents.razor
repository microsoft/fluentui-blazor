@namespace Microsoft.Fast.Components.FluentUI

@inherits FluentComponentBase
<div>
    <FluentAccordion>
        <FluentAccordionItem Expanded="_expanded" Heading="@Heading" id="toc" role="doc-toc">
            <FluentIcon Slot="start" Name="@FluentIcons.TextBulletListTree" Size="@IconSize.Size20" Color="@Color.Accent" />
            @GetTocItems(_anchors)
        </FluentAccordionItem>

    </FluentAccordion>

    @if (ShowBackButton)
    {
        <FluentButton Appearance=Appearance.Accent @onclick="BackToTop" Id="backtotop" title="Go to top of page">Back to top</FluentButton>
    }
</div>