@namespace Microsoft.FluentUI.AspNetCore.Components
@using Microsoft.FluentUI.AspNetCore.Components.Extensions
@inherits FluentInputBase<TValue>
@typeparam TValue

<FluentField InputComponent="@this" ForId="@Id" Class="@ClassValue" Style="@StyleValue">
	<fluent-slider slot="input"
	               id="@Id"
	               disabled="@Disabled"
	               min="@FormatValueAsString(Min)"
	               max="@FormatValueAsString(Max)"	
	               value="@FormatValueAsString(Value)"
	               step="@(Step is null || (Step is int value && value == 0) ? null : FormatValueAsString(Step))"
	               size="@Size.ToAttributeValue()"
	               orientation="@(Orientation == Orientation.Horizontal ? null : Orientation.ToAttributeValue())"
	               mode="@Mode.ToAttributeValue()"
	               name="@Name"
	               readonly="@ReadOnly"
	               aria-label="@AriaLabel"
	               autofocus="@Autofocus"
	               required="@Required"
	               @onfocusout="@FocusOutHandlerAsync"
	               @onchange="@ChangeHandlerAsync"
	               @attributes="AdditionalAttributes"
	               style="width:100%">
		@ChildContent
    </fluent-slider>
</FluentField>
