@namespace Microsoft.FluentUI.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Rendering;
@using Microsoft.FluentUI.AspNetCore.Components.Extensions
@inherits FluentComponentBase

<fluent-button id="@Id"
               class="@ClassValue"
               style="@StyleValue"
               shape="@Shape.ToAttributeValue()"
               size="@Size.ToAttributeValue()"
               icon-only="@(IconOnly || EmptyContent)"
               name="@Name"
               aria-label="@Title"
               title="@Title"
               appearance="@(Appearance == ButtonAppearance.Default ? null : Appearance.ToAttributeValue())"
               slot="@(Menu != null ? "primary-action" : null)"
               @attributes="@AdditionalAttributes">
    @if (IconStart != null)
    {
        <FluentIcon Value="@IconStart" Slot="@(EmptyContent ? null : "start")" />
    }
    @Label
    @ChildContent
    @if (IconEnd != null)
    {
        <FluentIcon Value="@IconEnd" Slot="@(EmptyContent ? null : "end")" />
    }
</fluent-button>
