@namespace Microsoft.Fast.Components.FluentUI
@inherits FluentComponentBase
@typeparam TValue
<fluent-radio @ref=Element
              class="@Class"
              style="@Style"
              readonly="@Readonly"
              id=@Id
              disabled="@Disabled"
              name=@Context!.GroupName
              required="@Required"
              aria-label="@(string.IsNullOrEmpty(Title) ? Label : Title)"
              checked="@Context.CurrentValue?.Equals(Value)"
              current-value="@BindConverter.FormatValue(Value?.ToString())"
              @attributes="AdditionalAttributes">
    @Label
    @ChildContent
</fluent-radio>

