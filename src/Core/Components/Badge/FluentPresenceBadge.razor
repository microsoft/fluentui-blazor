@namespace Microsoft.FluentUI.AspNetCore.Components
@using Microsoft.FluentUI.AspNetCore.Components.Extensions
@inherits FluentBadge

<AddTag Name="fluent-badge-container" TagWhen="@(() => _isAttached)" style="@ContainerStyle">
	@ChildContent
	<fluent-badge id="@Id"
				  fuib
				  class="@ClassValue"
				  style="@StyleValue"
				  size="@Size.ToAttributeValue()"
				  positioning="@Positioning.ToAttributeValue()"
				  offset-x="@(OffsetX)"
				  offset-y="@(OffsetY)"
				  @attributes="@AdditionalAttributes">
		@if (IconStart != null)
		{
			<FluentIcon Width="@($"{_width}px")" Value="@IconStart" Slot="@FluentSlot.Start" Color="Components.Color.Custom" CustomColor="@GetIconColor()" aria-label="@IconLabel" style="@IconStartStyle" />
		}
	</fluent-badge>
</AddTag>

