@namespace Microsoft.FluentUI.AspNetCore.Components
@using Microsoft.FluentUI.AspNetCore.Components.Extensions
@inherits FluentBadge

<AddTag Name="fluent-badge-container" TagWhen="@(() => _isAttached)" style="@_containerStyle">
	@ChildContent
	<fluent-badge id="@Id"
				  class="@ClassValue"
				  style="@StyleValue"
				  size="@Size.ToAttributeValue()"
				  positioning="@Positioning.ToAttributeValue()"
				  aria-label="@_ariaLabel"
				  slot="@Slot"
				  @attributes="@AdditionalAttributes">
		@if (IconStart != null)
		{
			<FluentIcon Width="@($"{_iconWidth}px")" Value="@IconStart" Slot="@FluentSlot.Start" Color="Components.Color.Custom" CustomColor="@GetIconColor()" aria-label="@IconLabel" Style="margin: -1px;" />
		}
	</fluent-badge>
</AddTag>

