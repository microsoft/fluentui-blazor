@namespace Microsoft.FluentUI.AspNetCore.Components
@using Microsoft.FluentUI.AspNetCore.Components.Extensions
@inherits FluentComponentBase

<AddTag Name="fluent-badge-container" TagWhen="@(() => _isAttached)">
    @ChildContent
    <fluent-badge id="@Id"
                  fuib
                  class="@ClassValue"
                  style="@StyleValue"
                  appearance="@Appearance.ToAttributeValue()"
                  color="@Color.ToAttributeValue()"
                  shape="@Shape.ToAttributeValue()"
                  size="@Size.ToAttributeValue()"
                  positioning="@Positioning.ToAttributeValue()"
                  offset-x="@(OffsetX)"
                  offset-y="@(OffsetY)"
                  @attributes="@AdditionalAttributes">
        @if (IconStart != null)
        {
            <FluentIcon Value="@IconStart" Slot="@(Content is null ? null : "start")" Color="Components.Color.Custom" CustomColor="@GetIconColor()" aria-label="@IconLabel" />

        }
        @Content
        @if (IconEnd != null)
        {
            <FluentIcon Value="@IconEnd" Slot="@(Content is null ? null : "end")" Color="Components.Color.Custom" CustomColor="@GetIconColor()" aria-label="@IconLabel" />
        }
    </fluent-badge>
</AddTag>
