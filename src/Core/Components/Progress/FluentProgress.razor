@namespace Microsoft.FluentUI.AspNetCore.Components
@inherits FluentComponentBase
@if (Visible)
{
    <fluent-progress @ref=Element
                     class="@ClassValue"
                     style="@StyleValue"
                     min="@Min"
                     max="@Max"
                     value="@Value"
                     Paused="@Paused"
                     @attributes="AdditionalAttributes">
        @ChildContent
    </fluent-progress>
}