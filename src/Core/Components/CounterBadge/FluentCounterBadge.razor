@namespace Microsoft.FluentUI.AspNetCore.Components
@using Microsoft.FluentUI.AspNetCore.Components.Extensions
@inherits FluentBadge


<AddTag Name="span" TagWhen="@(() => _isAttached)" class="container">
    @ChildContent
    <AddTag Name="span" TagWhen="@(() => _isAttached)" class="wrapper" style="@_internalStyle">
        <fluent-counter-badge id="@Id"
                              fuib
                              class="@ClassValue"
                              style="@StyleValue"
                              appearance="@Appearance.ToAttributeValue()"
                              color="@Color.ToAttributeValue()"
                              shape="@Shape.ToAttributeValue()"
                              size="@Size.ToAttributeValue()"
                              count="@GetCount()"
                              overflow-count="@OverflowCount"
                              show-zero="@ShowZero"
                              dot="@Dot"
                              @attributes="@AdditionalAttributes">
            @if (IconStart != null)
            {
                <FluentIcon Value="@IconStart" Slot="start" Color="Components.Color.Custom" CustomColor="@GetIconColor()" aria-label="@IconLabel" />
            }
            @if (IconEnd != null)
            {
                <FluentIcon Value="@IconEnd" Slot="end" Color="Components.Color.Custom" CustomColor="@GetIconColor()" aria-label="@IconLabel" />
            }
        </fluent-counter-badge>
    </AddTag>
</AddTag>

