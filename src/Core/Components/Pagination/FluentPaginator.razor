@namespace Microsoft.FluentUI.AspNetCore.Components
@inherits FluentComponentBase
@inject IStringLocalizer<FluentPaginatorResource> Loc

<div class="paginator">
    @if (State.TotalItemCount.HasValue)
    {
        <div class="summary">
            @if (SummaryTemplate is not null)
            {
                @SummaryTemplate
            }
            else
            {
                <text><strong>@State.TotalItemCount</strong> @(State.TotalItemCount > 1 ? Loc[nameof(FluentPaginatorResource.Items)] : Loc[nameof(FluentPaginatorResource.Item)])</text>
            }
        </div>
        <nav role="navigation" class="paginator-nav">
            <FluentButton @onclick="GoFirstAsync" Disabled="@(!CanGoBack)" title="@Loc[nameof(FluentPaginatorResource.GoToFirstPage)].Value" aria-label="@Loc[nameof(FluentPaginatorResource.GoToFirstPage)].Value">
                <FluentIcon Value="@(new CoreIcons.Regular.Size20.ChevronDoubleLeft())" Width="20px" />
            </FluentButton>
            <FluentButton @onclick="GoPreviousAsync" Disabled="@(!CanGoBack)" title="@Loc[nameof(FluentPaginatorResource.GoToPreviousPage)].Value" aria-label="@Loc[nameof(FluentPaginatorResource.GoToPreviousPage)].Value">
                <FluentIcon Value="@(new CoreIcons.Regular.Size24.ChevronLeft())" Width="20px" />
            </FluentButton>
            <div class="pagination-text">
                @Loc[nameof(FluentPaginatorResource.Page)] <strong>@(State.CurrentPageIndex + 1)</strong>
                @Loc[nameof(FluentPaginatorResource.Of)] <strong>@(State.LastPageIndex + 1)</strong>
            </div>
            <FluentButton @onclick="GoNextAsync" Disabled="@(!CanGoForward)" title="@Loc[nameof(FluentPaginatorResource.GoToNextPage)].Value" aria-label="@Loc[nameof(FluentPaginatorResource.GoToNextPage)].Value">
                <FluentIcon Value="@(new CoreIcons.Regular.Size24.ChevronRight())" Width="20px" />
            </FluentButton>
            <FluentButton @onclick="GoLastAsync" Disabled="@(!CanGoForward)" title="@Loc[nameof(FluentPaginatorResource.GoToLastPage)].Value" aria-label="@Loc[nameof(FluentPaginatorResource.GoToLastPage)].Value">
                <FluentIcon Value="@(new CoreIcons.Regular.Size20.ChevronDoubleRight())" Width="20px" />
            </FluentButton>
        </nav>
    }
</div>
