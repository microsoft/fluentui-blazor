@namespace Microsoft.FluentUI.AspNetCore.Components
@inherits FluentComponentBase
<CascadingValue Value="this" IsFixed="true">
    <fluent-tree-view @ref=Element
                      class="@Class"
                      style="@Style"
                      render-collapsed-nodes="@RenderCollapsedNodes"
                      @onselectedchange="@HandleCurrentSelectedChangeAsync"
                      @attributes="AdditionalAttributes">
        @ChildContent

        @if (Items != null)
        {
            foreach (var item in Items)
            {
                <FluentTreeItem Text="@item.Text"
                                Items="@item.Items"
                                Disabled="@item.Disabled"
                                IconExpanded="@item.IconExpanded"
                                IconCollapsed="@item.IconCollapsed" />
            }
        }
    </fluent-tree-view>
</CascadingValue>
