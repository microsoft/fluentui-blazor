@namespace Microsoft.FluentUI.AspNetCore.Components
@using Microsoft.FluentUI.AspNetCore.Components.Extensions
@inherits FluentInputBase<bool>

<FluentField InputComponent="@this" ForId="@Id" Class="@ClassValue" Style="@StyleValue" Label="@(!string.IsNullOrEmpty(CheckedMessage) && CurrentValue ? CheckedMessage : (!string.IsNullOrEmpty(UncheckedMessage) && !CurrentValue ? UncheckedMessage : Label))">
    <fluent-switch aria-label="@AriaLabel"
                   autofocus="@Autofocus"
                   checked="@CurrentValue"
                   disabled="@Disabled"
                   id="@Id"
                   name="@Name"
                   readonly="@ReadOnly"
                   required="@Required"
                   @onfocusout="@FocusOutHandlerAsync"
                   @attributes="AdditionalAttributes"
                   @onchange="@OnSwitchChangedHandler"
                   slot="input"
                   tabindex="@GetTabIndexValue" />
</FluentField>
