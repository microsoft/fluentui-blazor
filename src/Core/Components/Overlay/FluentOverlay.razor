@namespace Microsoft.FluentUI.AspNetCore.Components

@if (Visible)
{
    <div class="@ClassValue"
         style="@StyleValue"
         @onclick="@OnCloseHandlerAsync"
         @oncontextmenu="@OnCloseHandlerAsync"
         @oncontextmenu:preventDefault="true">
        @if (!Interactive)
        {
            <div style="@($"display: flex; align-items:{Alignment.ToAttributeValue()}; justify-content: {Justification.ToAttributeValue()}; width: 100%; height: 100%")">
                @ChildContent
            </div>
        }
    </div>

    @if (Interactive)
    {
        <div style="@($"position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); z-index: {ZIndex.Overlay + 1}; display: flex; align-items:{Alignment.ToAttributeValue()}; justify-content: {Justification.ToAttributeValue()};")">
            @ChildContent
        </div>
    }
}
