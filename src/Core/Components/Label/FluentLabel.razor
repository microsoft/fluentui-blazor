@namespace Microsoft.FluentUI.AspNetCore.Components
@inherits FluentComponentBase

@switch (Typo)
{
    case Typography.Body:
        <p id="@Id" @attributes="AdditionalAttributes" typo="@Typo.ToAttributeValue()" default-margin=@DefaultMarginBlock bold=@Bold bolder=@Bolder class="@ClassValue" style="@StyleValue" disabled=@Disabled>@ChildContent</p>
        break;
    case Typography.Subject:
        <h6 id="@Id" @attributes="AdditionalAttributes" typo="@Typo.ToAttributeValue()" default-margin=@DefaultMarginBlock bold=@Bold bolder=@Bolder class="@ClassValue" style="@StyleValue" disabled=@Disabled>@ChildContent</h6>
        break;
    case Typography.Header:
        <h5 id="@Id" @attributes="AdditionalAttributes" typo="@Typo.ToAttributeValue()" default-margin=@DefaultMarginBlock bold=@Bold bolder=@Bolder class="@ClassValue" style="@StyleValue" disabled=@Disabled>@ChildContent</h5>
        break;
    case Typography.PaneHeader:
        <h4 id="@Id" @attributes="AdditionalAttributes" typo="@Typo.ToAttributeValue()" default-margin=@DefaultMarginBlock bold=@Bold bolder=@Bolder class="@ClassValue" style="@StyleValue" disabled=@Disabled>@ChildContent</h4>
        break;
    case Typography.EmailHeader:
        <h3 id="@Id" @attributes="AdditionalAttributes" typo="@Typo.ToAttributeValue()" default-margin=@DefaultMarginBlock bold=@Bold bolder=@Bolder class="@ClassValue" style="@StyleValue" disabled=@Disabled>@ChildContent</h3>
        break;
    case Typography.PageTitle:
        <h2 id="@Id" @attributes="AdditionalAttributes" typo="@Typo.ToAttributeValue()" default-margin=@DefaultMarginBlock bold=@Bold bolder=@Bolder class="@ClassValue" style="@StyleValue" disabled=@Disabled>@ChildContent</h2>
        break;
    case Typography.HeroTitle:
        <h1 id="@Id" @attributes="AdditionalAttributes" typo="@Typo.ToAttributeValue()" default-margin=@DefaultMarginBlock bold=@Bold bolder=@Bolder class="@ClassValue" style="@StyleValue" disabled=@Disabled>@ChildContent</h1>
        break;
    case Typography.H1:
        <h1 id="@Id" @attributes="AdditionalAttributes" typo="@Typo.ToAttributeValue()" default-margin=@DefaultMarginBlock bold=@Bold bolder=@Bolder class="@ClassValue" style="@StyleValue" disabled=@Disabled>@ChildContent</h1>
        break;
    case Typography.H2:
        <h2 id="@Id" @attributes="AdditionalAttributes" typo="@Typo.ToAttributeValue()" default-margin=@DefaultMarginBlock bold=@Bold bolder=@Bolder class="@ClassValue" style="@StyleValue" disabled=@Disabled>@ChildContent</h2>
        break;
    case Typography.H3:
        <h3 id="@Id" @attributes="AdditionalAttributes" typo="@Typo.ToAttributeValue()" default-margin=@DefaultMarginBlock bold=@Bold bolder=@Bolder class="@ClassValue" style="@StyleValue" disabled=@Disabled>@ChildContent</h3>
        break;
    case Typography.H4:
        <h4 id="@Id" @attributes="AdditionalAttributes" typo="@Typo.ToAttributeValue()" default-margin=@DefaultMarginBlock bold=@Bold bolder=@Bolder class="@ClassValue" style="@StyleValue" disabled=@Disabled>@ChildContent</h4>
        break;
    case Typography.H5:
        <h5 id="@Id" @attributes="AdditionalAttributes" typo="@Typo.ToAttributeValue()" default-margin=@DefaultMarginBlock bold=@Bold bolder=@Bolder class="@ClassValue" style="@StyleValue" disabled=@Disabled>@ChildContent</h5>
        break;
    case Typography.H6:
        <h6 id="@Id" @attributes="AdditionalAttributes" typo="@Typo.ToAttributeValue()" default-margin=@DefaultMarginBlock bold=@Bold bolder=@Bolder class="@ClassValue" style="@StyleValue" disabled=@Disabled>@ChildContent</h6>
        break;
}
