@namespace Microsoft.FluentUI.AspNetCore.Components
@inject LibraryConfiguration LibraryConfiguration


@if (!string.IsNullOrEmpty(Label) || ChildContent is not null)
{
    var orientation = Orientation == Orientation.Horizontal ? Orientation.ToAttributeValue() : null; 

    <label for="@ForId" class="fluent-input-label" orientation=@orientation @attributes="@AdditionalAttributes" aria-label="@AriaLabel">
        @Label
        @ChildContent
        @if (Required)
        {
            @LibraryConfiguration.RequiredLabel;
        }
    </label>
}
