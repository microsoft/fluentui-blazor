@namespace Microsoft.FluentUI.AspNetCore.Components
@inherits FluentInputBase<TValue>
@typeparam TValue

@if (IsFluentUIStyle)
{
	<FluentCombobox @ref="_fluentCombobox"
					Id="@Id"
					TOption="DateTime ?"
					Class="@ClassValue"
					Style="@StyleValue"
					Label="@Label"
					LabelTemplate="@LabelTemplate"
					LabelPosition="@LabelPosition"
					LabelWidth="@LabelWidth"
					AriaLabel="@AriaLabel"
					Autofocus="@Autofocus"
					Appearance="@Appearance"
					ReadOnly="@ReadOnly"
					Disabled="@Disabled"
					@bind-Value="SelectedValue"
					@onkeydown="@KeyDownHandlerAsync"
					OptionText="@(i => i?.ToString(TimePattern))"
					OptionValue="@(i => FormatValueAsString(i))"
					OptionSelected="@((i, j) => i?.Hour == j?.Hour && i?.Minute == j?.Minute)"
					OptionDisabled="@DisableHourHandler"
					Required="@Required"
					Indicator="@(new CoreIcons.Regular.Size20.Clock().WithColor("var(--colorNeutralForeground3)"))"
					Items="@Items"
					Message="@Message"
					MessageIcon="@MessageIcon"
					MessageCondition="@MessageCondition"
					MessageState="@MessageState"
					MessageTemplate="@MessageTemplate"
					Placeholder="@GetPlaceholderAccordingToView()"
					Width="@Width"
					Name="@Name"
					@attributes="@AdditionalAttributes">
	</FluentCombobox>
}
else
{
	<FluentTextInput Id="@Id"
					 Class="@ClassValue"
					 Style="@StyleValue"
					 Label="@Label"
					 LabelTemplate="@LabelTemplate"
					 LabelPosition="@LabelPosition"
					 LabelWidth="@LabelWidth"
					 AriaLabel="@AriaLabel"
					 AutoComplete="off"
					 Autofocus="@Autofocus"
					 Appearance="@TextInputAppearance"
					 @bind-Value="@CurrentValueAsString"
					 ReadOnly="@ReadOnly"
					 Disabled="@Disabled"
					 Required="@Required"
					 type="time"
					 Message="@Message"
					 MessageIcon="@MessageIcon"
					 MessageCondition="@MessageCondition"
					 MessageState="@MessageState"
					 MessageTemplate="@MessageTemplate"
					 Placeholder="@GetPlaceholderAccordingToView()"
					 Name="@Name"
					 @attributes="@AdditionalAttributes" />
		}
