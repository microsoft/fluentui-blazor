@namespace Microsoft.FluentUI.AspNetCore.Components
@inherits FluentComponentBase
@typeparam TOption
<fluent-option @ref=Element
               id="@Id"
               class="@Class"
               style="@Style"
               disabled="@Disabled"
               value="@Value"
               selected="@Selected"
               aria-selected="@(Selected ? "true" : "false")"
               @onclick="@OnClickHandlerAsync"
               @attributes="AdditionalAttributes">
    @ChildContent
</fluent-option>
