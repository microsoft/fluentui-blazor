@namespace Microsoft.FluentUI.AspNetCore.Components
@inherits FluentComponentBase

<fluent-option id="@Id"
               class="@DefaultClassBuilder.Build()"
               style="@DefaultStyleBuilder.Build()"
               disabled="@Disabled"
               name="@Name"
               text="@Text"
               value="@Value"
               selected="@Selected"
               @attributes="@AdditionalAttributes">
    @ChildContent
</fluent-option>
